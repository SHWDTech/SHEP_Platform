@using SHEP_Platform.Models.Home
@model HomeStatList
@{
    ViewBag.Title = "系统首页";
}

<div style="display: flex; height: 100%;">
    <div id="basicInfo" style="width: 100%;">
        <div>
            <div style="height: 150px;">
                <div class="panel panel-default">
                    <div>
                        <div class="go-arrow" style="float: left;" id="left">
                            <img src="/Images/Site/2323.png" style="margin-top: 45px; margin-left: 2px; width: 25px;"/>
                        </div>
                        <div class="go-arrow" style="float: right" id="right">
                            <img src="/Images/Site/3232.png" style="margin-top: 45px; margin-right: 2px; width: 25px;"/>
                        </div>
                        <div class="infoWrap">
                            <div id="infobroad">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="mapContainer"></div>
        </div>
    </div>
</div>

@section Css{
    <link type="text/css" href="/Content/Page/Home.css" rel="stylesheet" />
}

@section scripts{
    <script type="text/javascript" src="/Scripts/Common/MapManipulation.js"></script>
    <script type="text/javascript" src="/Scripts/Page/Home.js"></script>
    <script type="text/javascript">
        var statusInfo = JSON.parse('@Html.Raw(ViewBag.Status)');
    </script>
}