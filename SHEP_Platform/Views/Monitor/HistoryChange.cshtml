@using SHEP_Platform.Models.Monitor
@using SHEP_Platform.Process

@{
    ViewBag.Title = "查询导出";
}

<div style="display: flex">
    <div style="margin-right: 50px;">
        <div>
            <form class="form-inline">
                <div class="form-group">
                    <label>选择统计范围：</label>
                    <select class="form-control daterange">
                        <option value="LH">最近一小时</option>
                        <option value="LD">最近一天</option>
                        <option value="LW">最近一周</option>
                        <option value="LM">最近一月</option>
                        <option value="LY">最近一年</option>
                        <option value="CUS">指定时间</option>
                    </select>
                    <div id="dateQuery">
                        <div id="date-selecter" class="input-group">
                            <div class='input-group date' id='startDate'>
                                <input type='text' class="form-control" />
                                <span class="glyphicon glyphicon-calendar input-group-addon"></span>
                            </div>
                            <span> - </span>
                            <div class='input-group date' id='endDate'>
                                <input type='text' class="form-control" />
                                <span class="glyphicon glyphicon-calendar input-group-addon"></span>
                            </div>
                        </div>
                        <input type="button" class="btn btn-success" value="查询" id="customQuery" />
                    </div>
                </div>
            </form>
        </div>
        <hr />
        <div style="position: relative;">
            <div style="width: 840px;">
                <div>
                    <h2 id="chartTitle" style="text-align: center; color: #1abc9c"></h2>
                </div>
                <div id="tpChart"></div>
                <div id="dbChart"></div>
            </div>
            <div id="divTable" style="-moz-min-width: 300px; -ms-min-width: 300px; -o-min-width: 300px; -webkit-min-width: 300px; min-width: 300px; position: absolute; top: 0; left: 860px;">
                <table class="table table-striped table-bordered table-hover">
                    <colgroup>
                        <col style="width: 75px;"/>
                        <col style="width: 75px;"/>
                        <col style="width: 75px;"/>
                        <col style="width: 75px;"/>
                    </colgroup>
                    <thead>
                    <tr><td colspan="4" style="text-align: center;">各工地均值数据</td></tr>
                    </thead>
                    <tbody>
                    @{
                        foreach (KeyValuePair<object, StatHourInfo> stat in ViewBag.StatDict)
                        {
                            var tStat = stat.Key as T_Stats;
                            var hourInfo = stat.Value;
                            if (hourInfo == null)
                            {
                                continue;
                            }
                            var current = hourInfo.Current;

                            if (tStat == null)
                            {
                                continue;
                            }

                            if (current != null)
                            {
                                <tr class="statName">
                                    <td colspan="4">
                                        @Html.ActionLink(tStat.StatName, null, null, new {href = "javascript:load(" + tStat.Id + ",'" + tStat.StatName + "')"})
                                        <span style="margin: 0 5px 0 5px" statid="@tStat.Id">（小时均值）</span>
                                        <input type="button" id="setMin" class="form-control btn btn-default" onclick="setDeviceMin(@tStat.Id)" value="校零" style="width: auto;"/>
                                    </td>
                                </tr>
                                <tr statid="@tStat.Id">
                                    <td>颗粒物(mg/m³)</td>
                                    <td class="pm">@(((current.TP)/1000).ToString("f2"))</td>
                                    <td>噪音(dB)</td>
                                    <td class="db">@current.DB.ToString("f2")</td>
                                </tr>
                                <tr statid="@tStat.Id">
                                    <td>PM2.5(mg/m³)</td>
                                    <td class="pm25">@((current.PM25.GetValueOrDefault()/1000).ToString("f2"))</td>
                                    <td>PM10(mg/m³)</td>
                                    <td class="pm100">@((current.PM100.GetValueOrDefault()/1000).ToString("f2"))</td>
                                </tr>
                                <tr style="height: 5px;"></tr>
                                <tr>
                                    <td>温度(℃)</td>
                                    <td class="temp">@current.Temperature</td>
                                    <td>湿度(%)</td>
                                    <td class="humi">@current.Humidity</td>
                                </tr>
                                <tr>
                                    <td>风速(m/s)</td>
                                    <td class="windspeed">@current.WindSpeed</td>
                                    <td>风向(°)</td>
                                    <td class="winddir">@(current.WindDirection + $"({Utility.DetectiveWindDirection(current.WindDirection).Chinese})")</td>
                                </tr>
                            }
                            else
                            {
                                <tr class="statName">
                                    <td colspan="4">
                                        @Html.ActionLink(tStat.StatName, null, null, new
                                        {
                                            href = "javascript:load(" + @tStat.Id + ",'" + @tStat.StatName
                                                   + "')"
                                        })
                                    </td>
                                </tr>
                                <tr>
                                    <td>颗粒物(mg/m³)</td>
                                    <td class="danger">暂无数据</td>
                                    <td>噪音(dB)</td>
                                    <td class="danger">暂无数据</td>
                                </tr>
                                <tr>
                                    <td>PM2.5(mg/m³)</td>
                                    <td class="danger">暂无数据</td>
                                    <td>PM10(mg/m³)</td>
                                    <td class="danger">暂无数据</td>
                                </tr>
                                <tr>
                                    <td>温度(℃)</td>
                                    <td class="danger">暂无数据</td>
                                    <td>湿度(%)</td>
                                    <td class="danger">暂无数据</td>
                                </tr>
                                <tr>
                                    <td>风速(m/s)</td>
                                    <td class="danger">暂无数据</td>
                                    <td>风向(°)</td>
                                    <td class="danger">暂无数据</td>
                                </tr>
                            }
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section css{
    @Styles.Render("~/Content/datetimepickercss")
    <style type="text/css">
        html > /**/ body #dateQuery {
            display: none;
        }

        html > /**/ body #date-selecter {
            margin-right: 20px;
        }

        html > /**/ body #tpChart {
            width: 800px;
            height: 300px;
        }

        html > /**/ body #dbChart {
            width: 800px;
            height: 300px;
        }
    </style>
}

@section scripts{
    @Scripts.Render("~/bundles/datetimepicker")
    <script type="text/javascript" src="/Scripts/Utility/echarts.js"></script>
    <script type="text/javascript" src="/Scripts/Common/SetUpCharts.js"></script>
    <script type="text/javascript" src="/Scripts/Monitor/HistoryChange.js"></script>
    <script type="text/javascript">
        curId = @ViewBag.defaultId;
    </script>
}